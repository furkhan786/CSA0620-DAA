#include <stdio.h>

// Binary Search Function
int binarySearch(int arr[], int n, int key) {
    int low = 0, high = n - 1;

    while (low <= high) {
        int mid = low + (high - low) / 2;

        if (arr[mid] == key)
            return mid;   // Found
        else if (arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }

    return -1;  // Not found
}

int main() {
    int arr[] = {-9, 3, 4, 6, 8, 9, 10, 30}; // Sorted array
    int n = sizeof(arr) / sizeof(arr[0]);

    int key1 = 10;
    int result1 = binarySearch(arr, n, key1);

    if (result1 != -1)
        printf("Element %d is found at position %d\n", key1, result1 + 1);
    else
        printf("Element %d is not found\n", key1);

    int key2 = 100;
    int result2 = binarySearch(arr, n, key2);

    if (result2 != -1)
        printf("Element %d is found at position %d\n", key2, result2 + 1);
    else
        printf("Element %d is not found\n", key2);

    return 0;
}
